# 服务器配置
HOST=0.0.0.0
PORT=8000

# 应用配置
APP_NAME=milvus-lite-server
DEBUG=False
VERSION=1.0.0

# Milvus 配置
MILVUS_PATH=milvus-lite-server.db

# JWT 配置
# 设置为 false 禁用JWT验证，适用于内部使用
# 设置为 true 启用JWT验证，适用于公网部署
JWT_ENABLED=true
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-environment-12345
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# 日志配置
LOG_LEVEL=INFO
# LOG_FILE=/path/to/logfile.log
